<!DOCTYPE html>
<html>

<head>
    <title>{{title}}</title>
    <style>
        .listing-container {
            margin-top: 3%;
            display: flex;
            flex-direction: row;
            align-items: flex-start;
            padding: 20px;
            font-size: large;
        }

        .listing-image {
            width: 50%;
            height: auto;
            margin-right: 20px;
        }

        .listing-title {
            font-size: 50px;
            position: relative;
            margin-top: 2%;
            margin-bottom: 10%;
        }

        .text-container {
            max-width: 50%;
            margin-left: 5%;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .vehicle-specs {
            margin-bottom: 8px;
            font-size: 25px;
        }

        .listing-description {
            margin-top: 20px;
            font-size: 22px;
        }

        .modal-content {
            align-items: center;
            padding: 10px;
            background-color: rgb(76, 76, 76, 0.9);
            color: aliceblue;
        }

        .cancelbtn {
            background-color: rgb(21, 134, 166);
            color: aliceblue;
            padding: 8px;
            border-radius: 10px;
            border: none;
        }

        .deletebtn {
            background-color: rgb(173, 42, 22);
            color: aliceblue;
            padding: 8px;
            border-radius: 10px;
            border: none;
        }

        .divider {
            width: 10px;
            height: auto;
            display: inline-block;
        }

        .submitbtn {
            background-color: rgb(21, 124, 153);
            color: aliceblue;
            padding: 10px;
            border-radius: 10px;
            border: none;
            margin-left: 17px;
        }

        .delete-listing-btn {
            background-color: rgb(208, 51, 27);
            color: aliceblue;
            padding: 10px;
            border-radius: 10px;
            border: none;
            margin-left: 17px;
        }
    </style>
</head>

<body>
    <div class="listing-container">
        <img class="listing-image" src="data:image/jpeg;base64,{{image}}">
        <div class="text-container">
            <h1 class="listing-title">{{title}}</h1>
            <p class="vehicle-specs">{{{specs}}}</p>
            <p class="listing-description">{{description}}</p>
        </div>
    </div>
    <div class="container mt-5">
        <h1>Update vehicle</h1>
        <form id="updateForm" action="/items/{{id}}?_method=PUT" method="POST" class="form-inline mb-4"
            enctype="multipart/form-data">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group mx-sm-3 mb-2">

                <label for="price">Price:</label>
                <input type="number" id="price" name="price" class="form-control" placeholder="Type Price" min="0">

                <label for="year">Year:</label>
                <input type="number" id="year" name="model_year" class="form-control" placeholder="Type year" min="0">

                <label for="mileage">Mileage:</label>
                <input type="number" id="mileage" name="mileage" class="form-control" placeholder="Type Mileage"
                    min="0">

                <label for="powerType">Select Power Type:</label>
                <select id="powerType" name="power_type" class="form-control" multiple="multiple">
                    <option value="Petrol">Petrol</option>
                    <option value="Diesel">Diesel</option>
                    <option value="Electric">Electric</option>
                    <option value="Hybrid">Hybrid</option>
                </select>

                <label for="gearboxType">Select Gearbox Type:</label>
                <select id="gearboxType" name="gearbox_type" class="form-control" multiple="multiple">
                    <option value="Manual">Manual</option>
                    <option value="Automatic">Automatic</option>
                </select>

                <label for="description">Description:</label>
                <input type="text" id="description" name="description" class="form-control"
                    placeholder="Type Description">

                <label for="image">Image:</label>
                <input type="file" id="image" name="image" class="form-control" />
            </div>
            <button type="submit" class="submitbtn">Submit</button>
            <button type="button" class="delete-listing-btn" name="delete-listing-button"
                onclick="document.getElementById('deleteModal').style.display='block'">Delete Listing</button>
        </form>
        <div id="deleteModal" class="modal">
            <form class="modal-content" action="/items/{{id}}?_method=DELETE" method="POST">
                <div class="modal-container">
                    <h1>Delete Listing</h1>
                    <p>Are you sure you want to delete this listing?</p>

                    <div class="clearfix">
                        <button type="button" class="cancelbtn" onclick="document.getElementById('deleteModal').style.display='none'">Cancel</button>
                        <div class="divider"></div>
                        <button type="submit" class="deletebtn">Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Get the modal
        var modal = document.getElementById('deleteModal');

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
</body>

</html>